<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39add1"
    android:padding="50dp"
    tools:context="edu.dartmouth.cs.dartmouthnews.MainActivity">

    <TextView
        android:id="@+id/text_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_news_title"
        android:textColor="@color/half_transparent"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/text_news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/first_news_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/button_next_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:text="@string/next_news"/>


</RelativeLayout>
